<!-- So as i was having a bit of problem while navigating through pages and keeping the dark mode on so i did a bit of cheating and searched it through internet -->
    <script>
        // Dark mode toggle script
        $(document).ready(function () {
            const darkModeBtn = $("#bt");

            // Check if dark mode is already enabled (on page load)
            const isDarkModeEnabled = localStorage.getItem("darkModeEnabled") === "true";
            if (isDarkModeEnabled) {
                enableDarkMode();
            }

            darkModeBtn.click(function () {
                $("nav").toggleClass("dark");
                $("body").toggleClass("dark");
                $("button").toggleClass("dark");

                // Toggle the dark mode state in localStorage
                const isCurrentlyDarkMode = $("body").hasClass("dark");
                localStorage.setItem("darkModeEnabled", isCurrentlyDarkMode.toString());

                // Update the button text
                const newText = isCurrentlyDarkMode ? "Light Mode" : "Dark Mode";
                darkModeBtn.text(newText);
            });

            function enableDarkMode() {
                $("nav").addClass("dark");
                $("body").addClass("dark");
                $("button").addClass("dark");
            }
        });
    </script>

